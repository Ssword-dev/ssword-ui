{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "@ssword-ui/react",

	"root": "packages/ui-react",
	"sourceRoot": "packages/ui-react/src",

	"projectType": "library",
	"metadata": {
		"description": "An expressive UI Library for ReactJS"
	},

	"release": {
		"version": {
			"manifestRootsToUpdate": ["dist/{projectRoot}"],
			"currentVersionResolver": "git-tag",
			"fallbackCurrentVersionResolver": "disk"
		}
	},

	"tags": [],

	"targets": {
		"build": {
			"cache": true,
			"command": "vite build",
			"options": {
				"cwd": "{projectRoot}"
			},
			"outputs": ["{projectRoot}/dist"]
		},

		"test": {
			"cache": true,
			"command": "vitest run",
			"options": {
				"cwd": "{projectRoot}"
			}
		},

		"lint": {
			"cache": true,
			"command": "eslint .",
			"options": {
				"cwd": "{projectRoot}"
			}
		},

		"format": {
			"cache": true,
			"command": "prettier . --write",
			"options": {
				"cwd": "{projectRoot}"
			}
		},

		"typecheck": {
			"cache": true,
			"command": "tsc -p tsconfig.lib.json",
			"options": {
				"cwd": "{projectRoot}"
			}
		}
	}
}
