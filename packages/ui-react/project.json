{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "@ssword-ui/react",

	"projectType": "library",
	"metadata": {
		"description": "An expressive UI Library for ReactJS"
	},

	"release": {
		"version": {
			"manifestRootsToUpdate": ["dist/{projectRoot}"],
			"currentVersionResolver": "git-tag",
			"fallbackCurrentVersionResolver": "disk"
		}
	},

	"tags": [],

	"targets": {
		"build": {
			"executor": "@nx/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/utils-dom",
				"main": "utils-dom/src/index.ts",
				"tsConfig": "utils-dom/tsconfig.lib.json",
				"assets": ["utils-dom/*.md"],
				"format": ["esm", "cjs"],
				"generatePackageJson": true
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		}
	}
}
