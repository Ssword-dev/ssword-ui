{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"../../tests/packages/ui-vue/core/events.spec.ts"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"paths": {
			"@/*": ["./src/*"],
			"@ssword/utils": ["../utils/src/index.ts"],
			"@ssword/utils/*": ["../utils/src/*"],
			"@ssword/scheduler": ["../scheduler/src/index.ts"]
		},

		"jsx": "preserve",
		"jsxImportSource": "vue"
	}
}
