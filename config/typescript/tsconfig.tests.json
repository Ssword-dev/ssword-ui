{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vitest.config.ts",
    "**/tests/*.ts",
    "**/__tests__/*.ts"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
