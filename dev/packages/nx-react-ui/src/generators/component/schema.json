{
	"$schema": "https://json-schema.org/schema",
	"$id": "Component",
	"title": "Component Generator",
	"type": "object",
	"properties": {
		"components": {
			"type": "array",
			"description": "components to generate",
			"items": {
				"type": "string"
			},
			"x-prompt": "Add component names"
		},
		"asChild": {
			"type": "boolean",
			"description": "",
			"x-prompt": "Do you want to support asChild?"
		},

		"variants": {
			"type": "boolean",
			"description": "",
			"x-prompt": "Do you want to use variants?"
		},

		"forward": {
			"type": "boolean",
			"description": "",
			"x-prompt": "Do you want to use forwardRef?"
		},

		"project": {
			"type": "string",
			"description": "",
			"default": "@ssword-ui/react"
		}
	},
	"required": ["components"]
}
