{
	"$schema": "https://json-schema.org/schema",
	"$id": "Component",
	"title": "Component Generator",
	"type": "object",
	"properties": {
		"name": {
			"type": "string",
			"description": "",
			"$default": {
				"$source": "argv",
				"index": 0
			},
			"x-prompt": "What name would you like to use?"
		},

		"asChild": {
			"type": "boolean",
			"description": "",
			"x-prompt": "Do you want to support asChild?"
		},

		"variants": {
			"type": "boolean",
			"description": "",
			"x-prompt": "Do you want to use variants?"
		},

		"forward": {
			"type": "boolean",
			"description": "",
			"x-prompt": "Do you want to use forwardRef?"
		},

		"project": {
			"type": "string",
			"description": "",
			"default": "packages/ui-react"
		}
	},
	"required": ["name"]
}
