{
	"search.exclude": {
		"**/.yarn": true,
		"**/.pnp.*": true
	},

	"npm.packageManager": "pnpm",

	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,

		// yarn stuff.
		"**/.yarn": true,
		"**/yarn.lock": true,

		// yarn berry PnP
		"**/.pnp.cjs": true,
		"**/.pnp.loader.mjs": true,

		// build related stuff.
		"**/.turbo": true,
		// "**/node_modules": true,
		// "**/dist": true,

		// eslint
		"**/.eslintcache": true
	},

	"typescript.enablePromptUseWorkspaceTsdk": true,

	// combination of these together is just...
	// perfect.
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"typescript.tsdk": "node_modules\\typescript\\lib"
}
